
<div class="row">
<div class="span4">
<%= simple_form_for(resource, :as => resource_name,
	html:{ class:"well"},
 :url => session_path(resource_name)) do |f| %>
 <fieldset>
<legend>Sing in</legend>
 <%= f.input :email %>
  <%= f.input :password %>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.input :remember_me, as: :boolean %></div>
  <% end -%>

  <div><%= f.button :submit, "Sing in" %></div>
<% end %>

<%= render "devise/shared/links" %>
 </fieldset>
 
</div>
<div class="span8"><h2>Signing is easy and secure</h2></div>

</div>